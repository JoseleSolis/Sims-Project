@model ActivityRequirementsViewModel


@using (Html.BeginForm("Requirements", "Activity", FormMethod.Post, new { id = "activitySkills" }))
{
    <table class="table table-striped table-bordered table-sm">
        <tr>
            <th>Name</th>
            <th class="text-center"></th>
        </tr>
        @for (int i = 0; i < Model.Skills.Count; i++)
        {
            @Html.HiddenFor(p => p.Skills[i].SkillID)
            @Html.HiddenFor(p => p.Skills[i].Name)
            @Html.HiddenFor(p => p.Skills[i].Description)
            <tr>
                <td>@Model.Skills[i].Name</td>
                <td><input asp-for="RequiredPoints[i]" type="number" min="0" max="10"></td>
            </tr>
        }
    </table>
    @Html.HiddenFor(p => p.Activity.ActivityID)
    @Html.HiddenFor(p => p.Activity.Name)
    @Html.HiddenFor(p => p.Activity.Description)

    <button type="submit" class="btn btn-primary">Accept</button>
    <a asp-action="Profile" asp-route-id="@Model.Activity.ActivityID" class="btn btn-secondary">Cancel</a>
}
