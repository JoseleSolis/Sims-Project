@model Activity
<div class="jumbotron margin">
    <h1 class="display-3">@Model.Name</h1>
    <hr class="my-4">
    <p>@Model.Description</p>
    <p class="lead">
        <a class="btn btn-primary btn-lg space" asp-action="Requirements" asp-route-id="@Model.ActivityID" role="button">Requirements</a>
        <a class="btn btn-secondary btn-lg space" asp-action="Improvement" asp-route-id="@Model.ActivityID" role="button">Improvement</a>
    </p>
</div>